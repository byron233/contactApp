<h1>Edit contact</h1>

<form class="mb-3" action="/contact/edit/{{contact._id}}" method="POST">
    <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input type="text" class="form-control" id="name" value="{{contact.name}}" placeholder="Example: Juan" name="name" required autofocus>
    </div>

    <div class="mb-3">
    <label for="lastname" class="form-label">Lastname</label>
    <input type="text" class="form-control" id="lastname" value="{{contact.lastname}}" placeholder="Example: PÃ©rez" name="lastname" required>
    </div>

    <div class="mb-3">
    <label for="phonenumber" class="form-label">Phone number</label>
    <input type="number" class="form-control" id="phonenumber" value="{{contact.phone}}" placeholder="Example: 70-00-00-00" name="phone" required>
    </div>

    <div class="mb-3">
    <label for="address" class="form-label">Address</label>
    <input type="text" class="form-control" id="address" value="{{contact.address}}" placeholder="col..., city..., country..." name="address">
    </div>

    <div class="mb-3">
    <label for="email" class="form-label">Email address</label>
    <input type="email" class="form-control" id="email" value="{{contact.email}}" placeholder="name@example.com" name="email">
    </div>

    <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea class="form-control" id="description" rows="3" placeholder="A little description about the person" name="description">{{contact.description}}</textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>